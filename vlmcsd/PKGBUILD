# $Id: PKGBUILD 104076 2014-01-15 09:51:50Z spupykin $
# Maintainer: Sergej Pupykin <pupykin.s+arch@gmail.com>
# Maintainer: Uro≈° Vampl <mobile.leecher at gmail dot com>

pkgname=vlmcsd
pkgver=20141003
pkgrel=0
pkgdesc="KMS emulator."
arch=('arm' 'armv6h i686' 'x86_64')
url="http://forums.mydigitallife.info/threads/50234-Emulated-KMS-Servers-on-non-Windows-platforms/"
license=('GPL')
source=(http://forumi0721.iptime.org:8000/distfiles/vlmcsd-$pkgver.tar.gz
		vlmcsd.service
		vlmcsd.ini)
md5sums=('dd56d8ff8bff49bdc232fd7653245609'
		'9a6d2dcd0848dc3e7633c6ec4bbc4f97'
		'6d877167748aba342c4f1d0c7931851f')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  make
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}

  mkdir -p "${pkgdir}/usr/bin/"
  cp vlmcsd "${pkgdir}/usr/bin/"
  cp vlmcs "${pkgdir}/usr/bin/"

  mkdir -p "${pkgdir}/etc/"
  cp ../../vlmcsd.ini "${pkgdir}/etc/"

  mkdir -p "${pkgdir}/usr/lib/systemd/system/"
  cp ../../vlmcsd.service "${pkgdir}/usr/lib/systemd/system/"
}
