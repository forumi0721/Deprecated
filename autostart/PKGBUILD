# Maintainer: StoneCold <forumi0721[at]gmail[dot]com>

pkgname=("autostart")
pkgver=20150107
pkgrel=1
pkgdesc="Autostart script service"
arch=("any")
license=("LGPL")
depends=("sh" "findutils")
install="${pkgname}.install"
source=("autostart.service"
	"autostart.sh")
md5sums=("SKIP"
	"SKIP")

pkgver() {
  date +'%Y%m%d'
}

package() {
	install -dm0755 "${pkgdir}"/usr/lib/systemd/system
	install -Dm0644 "${srcdir}"/autostart.service "${pkgdir}"/usr/lib/systemd/system/

	install -dm0755 "${pkgdir}"/usr/bin
	install -Dm0755 "${srcdir}"/autostart.sh "${pkgdir}"/usr/bin/

	install -dm0755 "${pkgdir}"/etc/autostart.d
}

# vim:set ts=2 sw=2 et:
