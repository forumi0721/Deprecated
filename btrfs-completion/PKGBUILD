pkgname=btrfs-completion
pkgver=0.1
pkgrel=1
pkgdesc="Programmable completion for the bash shell (btrfs)"
arch=("any")
url="http://bash-completion.alioth.debian.org/"
license=("GPL")
depends=("bash" "bash-completion" "btrfs-progs")
source=(http://forumi0721.ipdisk.co.kr:8000/distfiles/${pkgname}-${pkgver}.zip)
md5sums=("24900849792a73fee185bb8a7687fcf9")

package() {
	cd ${srcdir}/${pkgname}-${pkgver}
	install -d ${pkgdir}/usr/share/bash-completion/completions/
	install -m644 btrfs ${pkgdir}/usr/share/bash-completion/completions/
}
