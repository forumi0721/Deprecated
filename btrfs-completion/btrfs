_btrfs() 
{
    local cur prev 
    COMPREPLY=()
    
    cur="${COMP_WORDS[COMP_CWORD]}"
    prev="${COMP_WORDS[COMP_CWORD-1]}"

    commands='subvolume filesystem device help'
    commands_subvolume='snapshot delete create list find-new set-default'
    commands_filesystem='defragment sync resize show df balance'
    commands_device='scan add delete'

    if [ $COMP_CWORD -eq 1 ]; then
        COMPREPLY=( $( compgen -W "$commands" -- "$cur" ) )
    elif [ $COMP_CWORD -eq 2 ]; then
        case $prev in
            subvolume)
                COMPREPLY=( $( compgen -W "$commands_subvolume" -- "$cur" ) )
                return 0
                ;;
            filesystem)
                COMPREPLY=( $( compgen -W "$commands_filesystem" -- "$cur" ) )
                return 0
                ;;
            device)
                COMPREPLY=( $( compgen -W "$commands_device" -- "$cur" ) )
                return 0
                ;;
        esac
    elif [ $COMP_CWORD -eq 3 ]; then
        case $prev in
            snapshot|delete|create|list|find-new|sync|df|balance| \
            scan|add)
                _filedir -d
                return 0
                ;;
            defragment)
                _filedir
                return 0
                ;;
        esac
    fi

    return 0  
}

complete -F _btrfs btrfs
