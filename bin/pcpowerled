#!/bin/sh

if [ -z "$(which gpio 2> /dev/null)" ]; then
	echo "command not found : gpio"
	exit 1
fi

if [[ "${UID}" -ne 0 ]]; then
	sudo "${0}" $*
	exit ${?}
fi

gpio mode 1 in
LED=$(gpio read 1)
if [[ "${LED}" == "1" ]]; then
	echo "PC Power LED Status : On"
else
	echo "PC Power LED Status : Off"
fi

exit 0
