pkgname=("stonecold-base-meta")
pkgver=20150212.1
pkgrel=1
pkgdesc="Install base packages"
arch=("any")
url="http://localhost/"
license=("Other")
depends=(
  "abs"
  "arch-install-scripts"
  "autostart"
  "bash-completion"
  "btrfs-completion"
  "btrfs-progs"
  "cpio"
  "cronie"
  "dosfstools"
  "elinks"
  "ethtool"
  "f2fs-tools"
  "gptfdisk"
  "haveged"
  "hd-idle"
  "mc"
  "ncftp"
  "net-tools"
  "ntfs-3g"
  "openssh"
  "p7zip"
  "pkgfile"
  "screen"
  "sudo"
  "unrar"
  "unzip"
  "vi-vim-symlink"
  "vim"
  "wget"
  "wput"
  "yaourt"
  "zip"
)
install="${pkgname}.install"
source=(
  "etc.zip"
)
md5sums=(
  "SKIP"
)

pkgver() {
  local ldate="$(date +'%Y%m%d')"
  local lrevision=0
  local lrevision2=0
  local larch=${arch}
  if [ "${larch}" != "any" ]; then
    larch="${CARCH}"
  fi
  for file in $(ls "${startdir}"/${pkgname}-${ldate}.*-${pkgrel}-${larch}.pkg.* 2> /dev/null)
  do
    lrevision2="$(echo $(basename "${file}") | sed -e "s/${pkgname}-${ldate}.//g" -e "s/-${pkgrel}-${larch}.pkg\..*//g" 2> /dev/null)"
    if [ "${lrevision2}" > 0 ] && [ "${lrevision}" -lt "${lrevision2}" ]; then
      lrevision=${lrevision2}
    fi
  done
  lrevision=$(($lrevision + 1))
  echo "${ldate}.${lrevision}"
}

package() {
  install -dm755 "${pkgdir}"/etc/
  install -Dm644 "${srcdir}"/etc/bash.bashrc2 "${pkgdir}"/etc/
  install -Dm644 "${srcdir}"/etc/locale.conf "${pkgdir}"/etc/
  install -dm755 "${pkgdir}"/etc/ssh
  install -Dm600 "${srcdir}"/etc/ssh/ssh_host_dsa_key "${pkgdir}"/etc/ssh/
  install -Dm644 "${srcdir}"/etc/ssh/ssh_host_dsa_key.pub "${pkgdir}"/etc/ssh/
  install -Dm600 "${srcdir}"/etc/ssh/ssh_host_ecdsa_key "${pkgdir}"/etc/ssh/
  install -Dm644 "${srcdir}"/etc/ssh/ssh_host_ecdsa_key.pub "${pkgdir}"/etc/ssh/
  install -Dm600 "${srcdir}"/etc/ssh/ssh_host_ed25519_key "${pkgdir}"/etc/ssh/
  install -Dm644 "${srcdir}"/etc/ssh/ssh_host_ed25519_key.pub "${pkgdir}"/etc/ssh/
  install -Dm600 "${srcdir}"/etc/ssh/ssh_host_key "${pkgdir}"/etc/ssh/
  install -Dm644 "${srcdir}"/etc/ssh/ssh_host_key.pub "${pkgdir}"/etc/ssh/
  install -Dm600 "${srcdir}"/etc/ssh/ssh_host_rsa_key "${pkgdir}"/etc/ssh/
  install -Dm644 "${srcdir}"/etc/ssh/ssh_host_rsa_key.pub "${pkgdir}"/etc/ssh/
  install -dm750 "${pkgdir}"/etc/sudoers.d
  install -Dm644 "${srcdir}"/etc/sudoers.d/sudoers "${pkgdir}"/etc/sudoers.d/
  install -Dm644 "${srcdir}"/etc/vimrc2 "${pkgdir}"/etc/
}

