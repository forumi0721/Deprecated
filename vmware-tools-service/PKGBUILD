# Maintainer: StoneCold <forumi0721[at]gmail[dot]com>

pkgname=("vmware-tools-service")
pkgver=0.1
pkgrel=1
pkgdesc="VMWare tools systemd service"
arch=("any")
license=("Other")
install="${pkgname}.install"
source=("vmware-tools.service")
md5sums=("SKIP")

package() {
	cd "${pkgdir}"

	install -dm0755 "${pkgdir}"/usr/lib/systemd/system
	install -Dm0644 "${srcdir}"/vmware-tools.service "${pkgdir}"/usr/lib/systemd/system/
}

# vim:set ts=2 sw=2 et:
