# Maintainer: StoneCold <forumi0721[at]gmail[dot]com>

pkgname=("bpi-led-off")
pkgver=0.1
pkgrel=1
pkgdesc="Banana Pi Green LED off service"
arch=("armv7h")
license=("LGPL")
source=("bpi-led-off.service"
	"bpi-led-off"
	"bpi-led-on")
md5sums=("SKIP"
	"SKIP"
	"SKIP")

package() {
	cd "${pkgdir}"

	install -dm0755 "${pkgdir}"/usr/lib/systemd/system
	install -Dm0644 "${srcdir}"/bpi-led-off.service "${pkgdir}"/usr/lib/systemd/system/

	install -dm0755 "${pkgdir}"/usr/bin
	install -Dm4755 "${srcdir}"/bpi-led-off "${pkgdir}"/usr/bin/
	install -Dm4755 "${srcdir}"/bpi-led-on "${pkgdir}"/usr/bin/
}

# vim:set ts=2 sw=2 et:
