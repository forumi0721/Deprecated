# Maintainer: StoneCold <forumi0721[at]gmail[dot]com>

pkgname=("ttf-bitstream-vera-sans-mono")
pkgver=0.1
pkgrel=1
pkgdesc="Bitstream vera sans mono font"
arch=("any")
url="http://www-old.gnome.org/fonts/"
license=("custom")
depends=("fontconfig" "xorg-fonts-encodings" "xorg-font-utils")
provides=("ttf-font")
install="${pkgname}.install"
source=("${pkgname}.zip")
md5sums=("1060cc1a5ef58d279d6d9413f7214dad")

package() {
	cd "${pkgdir}"
	install -dm0755 "${pkgdir}"/usr/share/fonts/TTF
	install -Dm0644 "${srcdir}"/BitstreamVeraSansMono.ttf "${pkgdir}"/usr/share/fonts/TTF/
}

