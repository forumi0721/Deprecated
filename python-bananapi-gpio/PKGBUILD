# Maintainer: StoneCold <forumi0721[at]gmail[dot]com>

pkgname=("python-bananapi-gpio")
pkgver=0.5.5
pkgrel=1
pkgdesc="Python library for GPIO access on a Banana Pi"
arch=("any")
url="https://github.com/LeMaker/RPi.GPIO_BP/"
license=("MIT")
depends=("python")
makedepends=("python-setuptools")
provides=("python-raspberry-gpio") 
conflicts=("python-raspberry-gpio")
source=("git+https://github.com/LeMaker/RPi.GPIO_BP.git")
md5sums=("SKIP")

build() {
	cd "${srcdir}"/RPi.GPIO_BP
	python setup.py install --prefix=/usr --root="${pkgdir}"/ --optimize=1
}

package() {
	cd "${pkgdir}"
}

