pkgname=ttf-nanum-fonts
pkgver=0.1
pkgrel=1
pkgdesc="Nanum fonts"
arch=("any")
license=("custom")
url="http://hangul.naver.com"
depends=("fontconfig" "xorg-fonts-encodings" "xorg-font-utils")
conflicts=("ttf-nanum")
provides=("ttf-font")
install=nanum-fonts.install
source=("http://forumi0721.iptime.org:8000/distfiles/${pkgname}-${pkgver}.tar.gz")
md5sums=("fcd794ef654520368ca611f90d0a43e4")

package() {
	cd ${srcdir}/${pkgname}-${pkgver}
	install -d ${pkgdir}/usr/share/fonts/TTF
	install -m644 *.ttf ${pkgdir}/usr/share/fonts/TTF/
}
