# Maintainer: StoneCold <forumi0721[at]gmail[dot]com>

pkgname=("ttf-nanum-fonts")
pkgver=0.1
pkgrel=1
pkgdesc="Nanum fonts"
arch=("any")
url="http://hangul.naver.com"
license=("OFL")
depends=("fontconfig" "xorg-fonts-encodings" "xorg-font-utils")
conflicts=("ttf-nanum" "ttf-nanumgothic_coding")
provides=("ttf-font")
install="${pkgname}.install"
source=("http://forumi0721.ipdisk.co.kr:8000/arch/distfiles/${pkgname}.zip")
md5sums=("dd0bda05fe1cda28acdbb9941f40ead9")

package() {
	cd "${pkgdir}"

	install -dm0755 "${pkgdir}"/usr/share/fonts/TTF
	install -Dm0644 "${srcdir}"/*.ttf "${pkgdir}"/usr/share/fonts/TTF/
}

