pkgname=("tvheadend_extra")
pkgver=0.1
pkgrel=1
pkgdesc="tvheadend extra EPG and frequencies"
arch=("any")
url="https://tvheadend.org/"
license=("custom")
depends=("tvheadend")
source=("kr-Cable-C&M-center-frequencies-QAM256_8VSB"
  "tv_grab_kr_epg")
md5sums=("SKIP"
  "SKIP")

package() {
	install -dm0755 "${pkgdir}"/usr/share/tvheadend/data/dvb-scan/atsc
	install -Dm0644 "${srcdir}"/kr-*-frequencies-* "${pkgdir}"/usr/share/tvheadend/data/dvb-scan/atsc/
	install -dm0755 "${pkgdir}"/usr/bin
	install -Dm0755 "${srcdir}"/tv_grab* "${pkgdir}"/usr/bin/
}

