# Maintainer: StoneCold <forumi0721[at]gmail[dot]com>

pkgname=("mc2xml-bin")
pkgver=1.3
pkgrel=2
pkgdesc="mc2xml is a small and fast standalone command line program for Windows/Linux/OSX that downloads media center, titantv, or schedules direct tv listings and outputs an XMLTV formatted (xmltv.dtd) .xml file."
arch=("x86_64" "armv7h")
url="http://mc2xml.awardspace.info/"
license=("custom")
provides=("mc2xml")
conflicts=("mc2xml")
replaces=("mc2xml")
options=("!strip" "staticlibs")
source=("mc2xml")
md5sums=("3b612d906f295ea822abadeaf43727b0")
depends_armv7h+=("qemu-i386-linux-user")
source_armv7h+=("mc2xml.sh")
md5sums_armv7h+=("170d298c3c1416043ece1bfd93ae837a")

package() {
	install -dm0755 "${pkgdir}"/usr/bin
  if [ "${CARCH}" = "armv7h" ]; then
    install -Dm0755 "${srcdir}"/mc2xml "${pkgdir}"/usr/bin/mc2xml_x86
    install -Dm0755 "${srcdir}"/mc2xml.sh "${pkgdir}"/usr/bin/mc2xml
  else
    install -Dm0755 "${srcdir}"/mc2xml "${pkgdir}"/usr/bin/
  fi
}

